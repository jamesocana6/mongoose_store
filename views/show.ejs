<style>
    body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    img {
        max-width: 400px;
        max-height: 400px;
    }
    h1 {
        text-transform: capitalize;
    }
    nav {
        display: flex;
        position: relative;
        height: 50px;
        background-color: chocolate;
        text-align: left;
        align-items: center;
    }
    a.back { 
        text-decoration: none;
        padding: 15px 15px 15px 15px;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongoose Store</title>
</head>
<body>
    <nav>
        <a class="back" href="/mongoose-store">Back to Store</a>
    </nav>
    <a href="/mongoose-store/<%=product._id%>/edit">Edit</a>
    <h1><%=product.name%></h1>
    <h2><%=product.description%></h2>
    <img src="<%=product.img%>" alt="<%=product.name%> image">
    <h2>$<%=product.price%></h2>
    <% if (product.qty > 0) { %>
        <h2>Qty: <%=product.qty%></h2>
    <% } else { %>    
        <h2>Qty: OUT OF STOCK </h2>
    <% } %>
    <!-- thinking about how to edit the product quantity on click -->
    <form action="/mongoose-store/<%=product._id%>/buy?_method=PUT" method="POST">
        <input style="max-width: 30px;" type="number" name="buy" value="1" min="1">
        <button>BUY</button>
    </form>
    <form action="/mongoose-store/<%=product._id%>?_method=DELETE" method="POST">
        <button>DELETE ITEM</button>
    </form>

</body>
</html>